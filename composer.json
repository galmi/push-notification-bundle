{
	"name": "dmytrof/push-notification-bundle",
	"type": "symfony-bundle",
	"description": "Symfony2 bundle for sending push notifications with OneSignal",
	"license": "MIT",
    "authors": [
        {
            "name": "Dmytro Feshchenko",
            "email": "dmytro.feshchenko@gmail.com",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": { "Dmytrof\\PushNotificationBundle\\": "src/" }
    },
    "require": {
        "php" : ">=5.6",
        "twig/twig": "1.*",
        "symfony/framework-bundle": "^3.4",
        "php-http/guzzle6-adapter": "^1.1",
    	"norkunas/onesignal-php-api": "^1.0"
    },
    "require-dev": {
    	"phpunit/phpunit": "5.*"
    },
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-master": "0.x-dev"
        }
    }
}
